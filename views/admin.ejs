<!doctype html>
<html lang="pl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/admin.css">
    <title>Админка</title>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Панель администратора</h1>
        <div class="text-center mb-4">
            <button id="showBooks" class="btn btn-primary">Показать книги</button>
            <button id="showUsers" class="btn btn-secondary">Показать пользователей</button>
        </div>

        <div id="booksSection" class="data-section">
            <h2>Существующие книги</h2>
            <table class="table table-bordered" style="background-color: aliceblue;">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Название</th>
                        <th>Автор</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody id="booksList">
                    <!-- Список книг будет загружен сюда -->
                </tbody>
            </table>
        </div>

        <div id="usersSection" class="data-section">
            <h2>Существующие пользователи</h2>
            <table class="table table-bordered" style="background-color: aliceblue;">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Имя пользователя</th>
                        <th>Email</th>
                        <th>Роль</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody id="usersList">
                    <!-- Список пользователей будет загружен сюда -->
                </tbody>
            </table>
        </div>

        <h2>Добавить новую книгу</h2>
        <form id="addBookForm">
            <div class="form-group">
                <input type="text" class="form-control" name="name" placeholder="Название книги" required>
                <input type="text" class="form-control" name="author" placeholder="Автор" required>
                <textarea class="form-control" name="description" placeholder="Описание" required></textarea>
                <input type="text" class="form-control" name="imageUrl" placeholder="URL изображения" required>
                <input type="text" class="form-control" name="link" placeholder="Ссылка" required>
            </div>
            <button type="submit" class="btn btn-success">Добавить книгу</button>
        </form>

        <h2>Удалить книгу</h2>
        <form id="deleteBookForm">
            <div class="form-group">
                <input type="text" class="form-control" name="name" placeholder="Название книги" required>
                <input type="text" class="form-control" name="author" placeholder="Автор" required>
            </div>
                <button type="submit" class="btn btn-danger">Удалить книгу</button>
        </form>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/models/admin.js"></script>
    
    
</body>
</html>